<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Item</title>
  </head>
  <body>
    <h1>Edit Item</h1>
    <form class="" action="/items/update/<%= item.id %>" method="post">
      Name : <input type="text" name="name" value="<%=item.name %>" ><br>
      quantity : <input type="text" name="quantity" value="<%=item.quantity %>"><br>
      <select name="CategoryId">
        <% for (let i = 0; i < category.length; i++) { %>
        <% if (item.CategoryId === category[i].id) { %>
          <option value="<%= category[i].id %>" selected><%= category[i].name %></option>
        <% } else { %>
          <option value="<%= category[i].id %>"><%= category[i].name %></option>
        <% } %>
        <% } %>
      </select>
      <input type="submit" value="go" >
    </form>
  </body>
</html>
